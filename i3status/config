general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"
order += "volume master"

wireless _first_ {
        format_up = "WiFi: (%quality at %essid, %bitrate)"
        format_down = "WiFi: down"
}

ethernet _first_ {
        format_up = "Ethernet: %ip (%speed)"
        format_down = "Ethernet: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
	format = "â™ª: %volume"
	format_muted = "â™ª: muted"
}

battery all {
        format = "%status %percentage rem: %remaining empty: %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

